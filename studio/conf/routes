# Routes

GET         /                                controllers.Application.index(any = "")
GET         /getDefinitions                  controllers.Definitions.getDefinitions()
GET         /getProjects                     controllers.Projects.getProjects()
GET         /getDiagram/item/:name           controllers.Diagrams.getDiagram(name: String)
GET         /getDiagram/item                 controllers.Diagrams.getBlankDiagram()
GET         /getDiagrams                     controllers.Diagrams.getDiagrams()
GET         /deleteDiagram/item/:name        controllers.Diagrams.deleteDiagram(name: String)
GET         /getDataSet/item/:name           controllers.Projects.getDataSet(name: String)
GET         /getClientSocket                 controllers.Application.clientSocket()
GET         /getServiceSocket                controllers.Application.serviceSocket()

POST        /saveDiagram                     controllers.Diagrams.saveDiagram()
POST        /evaluate/:clientId              controllers.Diagrams.evaluate(clientId: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)

# Map any other route to main index page
GET         /*any                            controllers.Application.index(any)